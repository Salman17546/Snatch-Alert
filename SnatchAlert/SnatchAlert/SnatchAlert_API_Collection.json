            "body": {
              "mode": "raw",
              "raw": "{\n  \"occurred_at\": \"2024-12-05T14:30:00Z\",\n  \"incident_type_name\": \"Mobile Snatching\",\n  \"location_data\": {\n    \"province\": \"Punjab\",\n    \"city\": \"Lahore\",\n    \"district\": \"Gulberg\",\n    \"neighborhood\": \"MM Alam Road\",\n    \"street_address\": \"Main Boulevard\",\n    \"latitude\": 31.5204,\n    \"longitude\": 74.3587\n  },\n  \"victim_data\": {\n    \"name\": \"Test Victim\",\n    \"age\": 28,\n    \"gender\": \"male\",\n    \"phone_number\": \"+923001234567\"\n  },\n  \"stolen_item_data\": {\n    \"item_type\": \"phone\",\n    \"imei\": \"111222333444555\",\n    \"phone_brand\": \"Samsung\",\n    \"phone_model\": \"Galaxy S21\",\n    \"value_estimate\": 75000\n  },\n  \"value_estimate\": 75000,\n  \"fir_filed\": true,\n  \"description\": \"Phone snatched at gunpoint\",\n  \"is_anonymous\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/reports/incidents/create/",
              "host": ["{{base_url}}"],
              "path": ["api", "reports", "incidents", "create", ""]
            }
          }
        },
        {
          "name": "List Incidents",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/reports/incidents/?city=Lahore",
              "host": ["{{base_url}}"],
              "path": ["api", "reports", "incidents", ""],
              "query": [
                {
                  "key": "city",
                  "value": "Lahore"
                }
              ]
            }
          }
        },
        {
          "name": "My Incidents",
          "request": {
            "method": "GET",
            "header": [
